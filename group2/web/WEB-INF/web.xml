<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AddRecipe</servlet-name>
        <servlet-class>com.servlet.AddRecipe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelRecipe</servlet-name>
        <servlet-class>com.servlet.DelRecipe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetRecipe</servlet-name>
        <servlet-class>com.servlet.GetRecipe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetRecipeById</servlet-name>
        <servlet-class>com.servlet.GetRecipeById</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.servlet.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateRecipeById</servlet-name>
        <servlet-class>com.servlet.UpdateRecipeById</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddRecipe</servlet-name>
        <url-pattern>/AddRecipe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelRecipe</servlet-name>
        <url-pattern>/DelRecipe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetRecipe</servlet-name>
        <url-pattern>/GetRecipe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetRecipeById</servlet-name>
        <url-pattern>/GetRecipeById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateRecipeById</servlet-name>
        <url-pattern>/UpdateRecipeById</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
